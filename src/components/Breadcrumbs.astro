---
interface Props {
  category: string;
  title: string;
}

const { category, title } = Astro.props;

// Helper to determine category link (simplified for this structure)
const categoryLink = category.toLowerCase() === 'python' ? '/#python' : '/#javascript';

const schema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://sudofix.dev"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": category,
      "item": `https://sudofix.dev${categoryLink}`
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": title
    }
  ]
});
---

<nav aria-label="Breadcrumb" class="mb-4">
  <ol class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
    <li>
      <a href="/" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Home</a>
    </li>
    <li>
      <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
      </svg>
    </li>
    <li>
      <a href={categoryLink} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">{category}</a>
    </li>
    <li>
      <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
      </svg>
    </li>
    <li>
      <span class="text-gray-900 dark:text-gray-100 font-medium truncate max-w-[200px] sm:max-w-xs block" aria-current="page">{title}</span>
    </li>
  </ol>
</nav>

<script type="application/ld+json" set:html={schema} />
